{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "isolatedModules": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "typings.d.ts",
        "typings/index.d.ts",
        "typings/modules/markdown-it/index.d.ts"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}
